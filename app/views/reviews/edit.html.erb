<h1>Edit Review</h1>

<%= form_tag "/reviews/#{@review.id}", method: :patch do  %>
  <%= label_tag :title, "Title: " %>
  <%= text_field_tag :title, "#{@review.title}" %>
  <%= label_tag :rating, "Rating:" %>
  <%= number_field_tag :rating, min: 1, max: 5 %>
  <%= label_tag :content, "Content: " %>
  <%= text_field_tag :content, "#{@review.content}" %>
  <%= label_tag :image_path, "Image URL:" %>
  <%= text_field_tag :image_path, "#{@review.image_path}" %>
  <%= submit_tag "Update Review" %>
<% end %>
